<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guillaume.if26_avargues_jacquot">

    <!-- Permissions for OpenStreetMap -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="fr.utt.if26_avargues_jacquot.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.utt.if26_avargues_jacquot.activity.NouveauCompteActivity"
            android:label="@string/title_activity_nouveau_compte"
            android:theme="@style/MyMaterialTheme"></activity>
        <activity
            android:name="fr.utt.if26_avargues_jacquot.activity.NouveauCompteActivitySuivant"
            android:label="@string/title_activity_nouveau_compte"
            android:theme="@style/MyMaterialTheme"></activity>
        <activity
            android:name="fr.utt.if26_avargues_jacquot.activity.FiltreActivity"
            android:label="@string/title_activity_filtre"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>
