<?xml version="1.0" encoding="utf-8"?><!--
Ce XML permet de définir le fragment de l'accueil de l'application.
   Dans ce fichier XML on définit un FrameLayout avec des LinearLayout.
   --><!--
   On créé donc le FrameLayout
   -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.AccueilFragment">

    <!--
          Ensuite le LinearLayout
          -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical"
        android:weightSum="1">
        <!--
              Après on met le texte qui définit le mode de bon plan
              -->
        <TextView
            android:id="@+id/TX_nouveaute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Nouveauté"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
        <!--
                  Puis un autre LinearLayout
                  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <!--
                     On met en place un ImageButton pour chaque bon plan. On pourra cliquer sur ce bon plan.
                      -->
            <ImageButton
                android:id="@+id/IMGB_nouveaute1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/long_terme_reduction" />

            <ImageButton
                android:id="@+id/IMGB_nouveaute2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/alimentation" />

            <ImageButton
                android:id="@+id/IMGB_nouveaute3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/stade" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.03"
            android:orientation="horizontal">
            <!--
                      On ajoute le texte en bas de chaque icone cliquante
                      -->
            <TextView
                android:id="@+id/TX_nouveaute1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:text="Réduction" />

            <TextView
                android:id="@+id/TX_nouveaute2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Alimentation" />

            <TextView
                android:id="@+id/TX_nouveaute3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="40dp"
                android:text="Stade" />
        </LinearLayout>

        <TextView
            android:id="@+id/TX_plusConsultes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Les plus consultés"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/IMGB_plusConsultes1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/distributeurs" />

            <ImageButton
                android:id="@+id/IMGB_plusConsultes2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/mairie" />

            <ImageButton
                android:id="@+id/IMGB_plusConsultes3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/salle_de_sport" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.03"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TX_plusConsultes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="20dp"
                android:text="Distributeur" />

            <TextView
                android:id="@+id/TX_plusConsultes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="20dp"
                android:text="Mairie" />

            <TextView
                android:id="@+id/TX_plusConsultes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:text="Salle de sport" />
        </LinearLayout>

        <TextView
            android:id="@+id/TX_plusCommentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Les plus commentés"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/IMGB_plusCommentes1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/hopital" />

            <ImageButton
                android:id="@+id/IMGB_plusCommentes2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/stations_services" />

            <ImageButton
                android:id="@+id/IMGB_plusCommentes3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.33"
                android:backgroundTint="@color/image_accueil_fond"
                android:src="@drawable/laveries" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.03"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TX_plusCommentes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:text="Hopital" />

            <TextView
                android:id="@+id/TX_plusCommentes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="20dp"
                android:text="Station service" />

            <TextView
                android:id="@+id/TX_plusCommentes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="40dp"
                android:text="Laverie" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
